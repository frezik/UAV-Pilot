#!/usr/bin/perl
use v5.14;
use strict;
use warnings;

use AnyEvent;
use UAV::Pilot;
use UAV::Pilot::Driver::ARDrone;
use UAV::Pilot::Control::ARDrone;

use constant IP  => '192.168.1.1';
my $ardrone = UAV::Pilot::Driver::ARDrone->new({
    host => IP,
});
$ardrone->connect;
my $ar = UAV::Pilot::Control::ARDrone->new({
    driver => $ardrone,
});
$ar->emergency;
